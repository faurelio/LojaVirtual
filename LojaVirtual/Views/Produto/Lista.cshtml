@model List<LojaVirtual.Models.ProdutoListaViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Produtos</h2>

<a href="@Url.Action("Editar","Produto")" style="float: right;">Novo Produto</a>

<table>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Categoria</td>
            <td>@item.Fornecedor</td>
            <td>
                @Html.ActionLink("Editar", "Editar", "Produto", new { id = item.Id }, null)
                |
                @Html.ActionLink("Apagar", "Apagar", "Produto", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>